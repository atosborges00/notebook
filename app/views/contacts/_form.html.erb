<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :kind_id %>
    <%= collection_select(:contact, :kind_id, @kind_options_for_select, :id, :description) %>
  </div>

  <%= form.fields_for :address_attributes do |address_fileds| %>
    <div class='field'>
      <%= form.label :street %>
      <%= address_fileds.text_field :street %>
    </div>

    <div class='field'>
      <%= form.label :city %>
      <%= address_fileds.text_field :city %>
    </div>

    <div class='field'>
      <%= form.label :state %>
      <%= address_fileds.text_field :state %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rmk %>
    <%= form.text_area :rmk %>
  </div>

  <div class="actions">
    <%= form.submit 'Enviar', class: 'button' %>
    <%= link_to 'Back', contacts_path, class: 'button' %>
  </div>
<% end %>
